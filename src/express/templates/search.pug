extends layout.pug

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='/search' method='get')
            label
              input(type='text' name='search' placeholder='Что ищем?' value=search)
            button.search__button.button.button--transparent(type='submit') Найти
          if (results.length)
            each result in results
              .search__result
                time.search__date(datetime='2019-03-21T20:33') #{formatPostDate(result.createDate)}
                a.search__link(href=`/articles/${result.id}`) #{result.title}
          else
            .search__result
              p Ничего не найшлось!
